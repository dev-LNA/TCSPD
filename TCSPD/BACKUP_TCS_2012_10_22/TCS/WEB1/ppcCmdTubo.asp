<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">

<title>TUBO</title>
<script language="javascript">
function bacia(acao)	{
	document.subform.comando1.value='TUBO TAMPA ' + acao;
	document.subform.submit();
}
function ventilador(acao)	{
	document.subform.comando1.value='TUBO VENTILADOR ' + acao;
	document.subform.submit();
}
function compressor(acao)	{
	var bok = true;
	if ( acao == 'LIGAR' )	{
		if ( document.subform.selecao[0].checked )	{
			scompressor = document.subform.selecao[0].value;
			bok = true;
		}
		else if ( document.subform.selecao[1].checked )	{
			scompressor = document.subform.selecao[1].value;
			bok = true;
		}
		else	{
			alert('Informe o compressor a ligar');
			bok = false;
		}
		if ( bok )	{
			document.subform.comando1.value='TUBO COMPRESSOR ' + acao + ' =' + scompressor;
			document.subform.submit();
		}
	}
	if ( acao == 'DESLIGAR' )	{
		document.subform.comando1.value='TUBO COMPRESSOR DESLIGAR';
		document.subform.submit();
	}
}
</script>
</head>

<body leftmargin="1" topmargin="1" rightmargin="1" bottommargin="1" marginwidth="1" marginheight="1">

<form name="subform" method="post" action="ppc.asp" target="processo">

<div align="center">

<input type="hidden" name="eqp" value="TUBO">
<input type="hidden" name="acao" value="SUBMIT">
<input type="hidden" name="comandos" value="1">
<input type="hidden" name="comando1" value="">
<font face="Tahoma"><strong>TUBO</strong></font>

<table width="172" height="90" border="0" align="center" cellpadding="0" cellspacing="0">

<tr>
<td colspan="2">
<div align="center">
<font size="2" face="Tahoma">Tampa da Bacia</font>
</div></td></tr>

<tr><td width="86">
<div align="center">
<input type="button" value="  ABRIR  " onClick="bacia('ABRIR');">
</div></td>

<td width="86"><div align="center">
<input type="button" value=" FECHAR " onClick="bacia('FECHAR');">
</div></td></tr>

<tr><td colspan="2">
<div align="center">
<font size="2" face="Tahoma">Ventiladores</font>
</div></td></tr>

<tr><td>
<div align="center">
<input type="button" value="  LIGAR  " onClick="ventilador('LIGAR');">
</div></td>

<td><div align="center">
<input type="button" value="DESLIGAR" onClick="ventilador('DESLIGAR');">
</div></td></tr>

<tr><td>
<div align="center">
<font size="2" face="Tahoma">Compressor</font></div></td>

<td>
<div align="center">
<font size="2" face="Tahoma">
<input name="selecao" type="radio" value="1" checked="checked">1 
<input name="selecao" type="radio" value="2">2
</font></div></td></tr>

<tr><td height="26">
<div align="center">
<input type="button" value="  LIGAR  " onClick="compressor('LIGAR');">
</div></td>

<td><div align="center">
<input type="button" value="DESLIGAR" onClick="compressor('DESLIGAR');">
</div></td></tr>

</table>

</div>
</form>
</body>
</html>